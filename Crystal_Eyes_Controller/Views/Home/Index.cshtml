									<span class="fs-15 lh-12 m-r-6" style="color: #222;">
										<i class="zmdi zmdi-circle"></i>
									</span>

									<a href="?category=@ViewBag.SearchCategory&menu=@ViewBag.Menu&price=@ViewBag.Price&sort=@ViewBag.Sort&color=@item"
									   class="filter-link stext-106 trans-04 @(ViewBag.Color == item ? "filter-link-active" : "")">
										 @item
									</a>
								</li>
							}
