@if (ViewBag.MainScreen != null && (bool)ViewBag.MainScreen)
{
	<script>
		document.addEventListener("DOMContentLoaded", function () {
			const element = document.getElementById("mainScreen");
			if (element) {
				element.scrollIntoView();
			}
		});
	</script>
}
