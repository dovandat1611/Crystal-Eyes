<script>
	document.getElementById("searchButton").addEventListener("click", function (event) {
		event.preventDefault(); // Ngăn form gửi mặc định

		const query = document.getElementById("searchQuery").value.trim();

		if (!query) {
			alert("Vui lòng nhập từ khóa tìm kiếm!");
			return;
		}

		// Đảm bảo không có request dư thừa
		fetch(`/search?query=${encodeURIComponent(query)}`, {
			method: "GET",
		})
			.then(response => {
				if (!response.ok) {
					throw new Error("Lỗi khi tải dữ liệu.");
				}
				return response.json();
			})
			.then(data => {
				const resultsDiv = document.getElementById("searchResults");
				resultsDiv.innerHTML = ""; // Xóa kết quả cũ

				if (data.length === 0) {
					resultsDiv.innerHTML = '<p class="p-b-35 isotope-item">Không tìm thấy kết quả nào.</p>';
					return;
				}

				data.forEach(item => {
					// Xử lý nhãn giảm giá
					const discountLabel = item.discount > 0
						? `
						<div class="block2-pic hov-img0 custom-rounded-large label-discount" data-label="Giảm ${item.discount}%">
							<img src="${item.mainImage}" alt="${item.name}" class="img-fluid rounded">
						</div>`
						: `
						<div class="block2-pic hov-img0 custom-rounded-large">
							<img src="${item.mainImage}" alt="${item.name}" class="img-fluid rounded">
						</div>`;

					// Xử lý hiển thị giá
					const discountHtml = item.discount > 0
						? `
						<div class="price-container">
							<span class="stext-105 cl3 old-price">${item.price.toFixed(2)} VND</span>
							<span class="stext-105 cl3 current-price" style="font-size: 18px;">
								${(item.price * (100 - item.discount) / 100).toFixed(2)} VND
							</span>
						</div>`
						: `
						<div class="price-container">
							<span class="stext-105 cl3 current-price" style="font-size: 18px;">
								${item.price.toFixed(2)} VND
							</span>
						</div>`;

					// Tạo HTML cho mỗi sản phẩm
					const resultItem = `
					<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item">
						<div class="block-2">
							${discountLabel}
							<div class="block2-txt flex-w flex-t p-t-14">
								<div class="block2-txt-child1 flex-col-l">
									<a href="/product-detail/${item.productId}" class="stext-110 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
										${item.name}
									</a>
									${discountHtml}
								</div>
							</div>
						</div>
					</div>`;

					resultsDiv.innerHTML += resultItem;
				});
			})
			.catch(error => console.error("Lỗi khi tìm kiếm:", error));
	});
</script>