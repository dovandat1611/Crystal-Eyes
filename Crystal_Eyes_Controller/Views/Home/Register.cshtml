@{
    ViewData["Title"] = "Crytal Eyes | Đăng ký";
    Layout = "_CustomerLayout";
}
@model RegisterViewModel


<!-- breadcrumb -->
<div class="container">
	<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
		<a href="/" class="stext-109 cl8 hov-cl1 trans-04">
			Trang chủ
			<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
		</a>
		<span class="stext-109 cl4">
			Đăng ký
		</span>
	</div>
</div>


<!-- Content page -->
<section class="bg0 p-t-65 p-b-60">
	<div class="container">
		<div class="d-flex justify-content-center align-items-center">

			<div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md custom-rounded-s-small ">
				<form asp-action="Register" method="post">
					<h4 class="mtext-105 cl2 txt-center p-b-30">
						Thông tin đăng ký
					</h4>
					<!-- Hiển thị lỗi chung -->
					@if (!ViewData.ModelState.IsValid)
					{
						<div class="text-danger d-flex justify-content-center align-items-center m-b-10">
							@Html.ValidationMessage("RegisterFail")
						</div>
					}
					<div class="bor8 m-b-20 how-pos4-parent custom-rounded-form">
						<input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" placeholder="Tên của bạn*" asp-for="Name">
					</div>
					<div class="text-danger m-b-10">
						<span asp-validation-for="Name"></span>
					</div>

					<div class="bor8 m-b-20 how-pos4-parent custom-rounded-form">
						<input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" placeholder="Số điện thoại*" asp-for="Phone">
					</div>
					<div class="text-danger m-b-10">
						<span asp-validation-for="Phone"></span>
					</div>

					<div class="bor8 m-b-20 how-pos4-parent custom-rounded-form">
						<input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" placeholder="Sinh nhật*" asp-for="Dob">
					</div>
					<div class="text-danger m-b-10">
						<span asp-validation-for="Dob"></span>
					</div>

					<div class="bor8 m-b-20 how-pos4-parent custom-rounded-form">
						<input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" placeholder="Địa chỉ nhận hàng*" asp-for="Address">
					</div>
					<div class="text-danger m-b-10">
						<span asp-validation-for="Address"></span>
					</div>

					<div class="bor8 m-b-20 how-pos4-parent custom-rounded-form">
						<input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30"
							placeholder="Email*" asp-for="Email">
					</div>
					<div class="text-danger m-b-10">
						<span asp-validation-for="Email"></span>
					</div>

					<div class="bor8 m-b-20 how-pos4-parent custom-rounded-form">
						<input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="password"
							placeholder="Mật khẩu*" asp-for="Password">
					</div>
					<div class="text-danger m-b-10">
						<span asp-validation-for="Password"></span>
					</div>

					<div class="bor8 m-b-20 how-pos4-parent custom-rounded-form">
						<input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="password" placeholder="Nhập lại mật khẩu*" asp-for="RePassword">
					</div>
					<div class="text-danger m-b-10">
						<span asp-validation-for="RePassword"></span>
					</div>

					<button class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
						Xác nhận
					</button>
				</form>
			</div>

		</div>
	</div>
</section>	