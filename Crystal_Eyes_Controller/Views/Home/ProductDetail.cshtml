@{
    ViewData["Title"] = "Crytal Eyes | Chi tiết sản phẩm";
    Layout = "_CustomerLayout";
}

<!-- breadcrumb -->
<div class="container">
	<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
		<a href="/" class="stext-109 cl8 hov-cl1 trans-04">
			Trang chủ
			<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
		</a>
		<span class="stext-109 cl4">
			Chi tiết sản phẩm
		</span>
	</div>
</div>

<!-- Product Detail -->
<section class="sec-product-detail bg0 p-t-65 p-b-60">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-lg-7 p-b-30">
				<div class="p-l-25 p-r-30 p-lr-0-lg">
					<div class="wrap-slick3 flex-sb flex-w">
						<div class="wrap-slick3-dots"></div>
						<div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

						<div class="slick3 gallery-lb custom-rounded-medium">

							@foreach (var item in ViewBag.ProductDetailImage as List<Image>)
							{
								<div class="item-slick3 " data-thumb="@item.ImageUrl">
									<div class="wrap-pic-w pos-relative">
										<img src="@item.ImageUrl" alt="@item.ImageId">

										<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="@item.ImageUrl">
											<i class="fa fa-expand"></i>
										</a>
									</div>
								</div>
							}

						</div>
					</div>
				</div>
			</div>

			<div class="col-md-6 col-lg-5 p-b-30">
				<div class="p-r-50 p-t-5 p-lr-0-lg">
					<h4 class="ltext-102 cl2 js-name-detail p-b-14" style="font-size: 34px;">
						@ViewBag.ProductDetail.Name
					</h4>
					@if (ViewBag.ProductDetail.Discount > 0)
					{
						<span class="mtext-106 cl2 old-price formatprice">
							@ViewBag.ProductDetail.Price
						</span>
						<span class="mtext-106 cl2 current-price formatprice" style="font-size: 20px;">
							@(ViewBag.ProductDetail.Price * (100 - ViewBag.ProductDetail.Discount) / 100)
						</span>
					}
					else
					{
						<span class="mtext-106 cl2 formatprice" style="font-size: 20px;">
							@ViewBag.ProductDetail.Price
						</span>
					}

					<p class="stext-102 cl3 p-t-23">
						@ViewBag.ProductDetail.SubDescription
					</p>

					<!--  -->
					<div class="p-t-33">
						<div class="flex-w flex-r-m p-b-10">
							<div class="size-203 flex-c-m respon6">
								Màu
							</div>

							<div class="size-204 respon6-next custom-rounded-medium">
								<div class="rs1-select2 bor8 bg0 custom-rounded-s-small">
									<select class="js-select2" name="color-id-add-cart">
										@foreach (var item in ViewBag.ProductDetailColor as List<Color>)
										{
											<option value="@item.ColorId">@item.ColorName</option>
										}
									</select>
									<div class="dropDownSelect2"></div>
								</div>
							</div>
						</div>
						<input type="hidden" name="product-id-add-cart" value="@ViewBag.ProductDetail.ProductId">
						<div class="flex-w flex-r-m p-b-10">
							
							<div class="size-204 flex-w flex-m respon6-next">
								<div class="wrap-num-product flex-w m-r-20 m-tb-10  custom-rounded-s-small">
									<div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
										<i class="fs-16 zmdi zmdi-minus"></i>
									</div>

									<input class="mtext-104 cl3 txt-center num-product" type="number" name="quantity-add-cart" value="1">

									<div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
										<i class="fs-16 zmdi zmdi-plus"></i>
									</div>
								</div>


								@if (ViewBag.IsLoggedIn != null && (bool)ViewBag.IsLoggedIn == true && ViewBag.RoleName == Constants.Role_Name.CUSTOMER)
								{
									<button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail custom-rounded-s-small add-to-cart">
										Thêm vào giỏ hàng
									</button>
								}
								else
								{
									<a href="/login" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 custom-rounded-s-small">
										Đăng nhập để đặt
									</a>
								}
							</div>
						</div>
					</div>

					<!--  -->
					<div class="flex-w flex-m p-l-100 p-t-40 respon7">
						@if (ViewBag.IsLoggedIn != null && (bool)ViewBag.IsLoggedIn == true && ViewBag.RoleName == Constants.Role_Name.CUSTOMER)
						{
							<div class="flex-m bor9 p-r-10 m-r-11">
								<a href="#" class="fs-20 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail tooltip100" data-tooltip="Thêm vào yêu thích">
									<i class="zmdi zmdi-favorite"></i>
								</a>
							</div>
						}
						<a href="https://www.facebook.com/dovandaatt" target="_blank" class="fs-20 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Facebook">
							<i class="fa fa-facebook"></i>
						</a>

						<a href="https://www.instagram.com/dovandaatt/" target="_blank" class="fs-20 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Instagram">
							<i class="fa fa-instagram"></i>
						</a>

						<a href="mailto:dovandat1611@gmail.com" target="_blank" class="fs-20 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Google">
							<i class="fa fa-google-plus"></i>
						</a>
					</div>
				</div>
			</div>
		</div>

		<div class="bor10 m-t-50 p-t-43 p-b-40 custom-rounded-s-small">
			<!-- Tab01 -->
			<div class="tab01">
				<!-- Nav tabs -->
				<ul class="nav nav-tabs" role="tablist">
					<li class="nav-item p-b-10">
						<a class="nav-link active" style="font-weight: bolder;" data-toggle="tab" href="#description" role="tab">Mô tả</a>
					</li>

					<li class="nav-item p-b-10">
						<a class="nav-link" style="font-weight: bolder;" data-toggle="tab" href="#information" role="tab">Thông tin</a>
					</li>

					<li class="nav-item p-b-10">
						<a class="nav-link" style="font-weight: bolder;" data-toggle="tab" href="#reviews" role="tab">Đánh giá (@ViewBag.Review.Count)</a>
					</li>
				</ul>

				<!-- Tab panes -->
				<div class="tab-content p-t-43">
					<!-- - -->
					<div class="tab-pane fade show active" id="description" role="tabpanel">
						<div class="how-pos2 p-lr-15-md">
							<p class="stext-102 cl6">
								@ViewBag.ProductDetail.Description
							</p>
						</div>
					</div>

					<!-- - -->
					<div class="tab-pane fade" id="information" role="tabpanel">
						<div class="row">
							<div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
								<p class="stext-102 cl6">
									@ViewBag.ProductDetail.AddInfo
								</p>
